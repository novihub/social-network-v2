{
	"compilerOptions": {
		// default
		"outDir": "./dist/", // Build dist ( it isn't required, because we build project by using webpack)
		"noImplicitAny": true, // type any is not allowed
		"module": "ES2022", //
		"target": "ESNext", // For supporting most browsers
		"jsx": "react-jsx", // like return <div></div>
		"allowJs": true,
		"moduleResolution": "node",
		// more familiar imports
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		// others
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
